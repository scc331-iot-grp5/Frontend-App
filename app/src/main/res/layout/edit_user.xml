<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUser">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText"
        app:elevation="0dp">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_bar"
            style="@style/Widget.Shrine.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="12dp"
            android:paddingRight="12dp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/shr_close_menu"
            app:title="Edit User" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/product_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/productGridBackgroundColor"
        android:elevation="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                     />

                <com.google.codelabs.mdc.java.shrine.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="104dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="center|top" />


            </FrameLayout>

            <View
                android:layout_width="500dp"
                android:layout_height="8dp"
                android:layout_gravity="top|center"
                android:layout_marginBottom="5dp"
                android:background="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/textView"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_details"
                android:textAppearance="@style/TextAppearance.Shrine.heading"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userID"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Contact" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="200dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:gravity="top"
                        android:text="Email"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Contact"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="UserID" />

                    <TextView
                        android:id="@+id/uid"
                        android:layout_width="200dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:gravity="top"
                        android:text="UserID"
                        android:textSize="24sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Full_Name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/nameBox"
                        android:layout_width="160dp"
                        android:layout_height="63dp"
                        android:layout_gravity="left"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:gravity="top"
                        android:text="Full Name"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="4dp"
                android:layout_gravity="top|center"
                android:background="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/textView32"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/assigned_devices"
                android:textAppearance="@style/TextAppearance.Shrine.heading"
                android:layout_marginStart="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listMicrobits"
                app:fastScrollEnabled="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"
                app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"
                app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"
                app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_width="350dp"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="top|center"
                android:background="?android:attr/textColorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/assignMicrobit"
                    style="@style/Widget.Shrine.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="160dp"
                    android:layout_marginRight="160dp"
                    android:text="Add" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</FrameLayout>