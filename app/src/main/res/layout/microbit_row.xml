<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator = "@animator/shr_next_button_state_list_anim"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="177dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/microbitIddD"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_round_devices_other_24"
            android:textSize="18sp"
            android:text="MicrobitID:" />

        <TextView
            android:id="@+id/m_name2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Name:"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/m_name4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_baseline_directions_car_24"
            android:text="Object Type:"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/microbitID"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/m_object"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/m_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Name"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>