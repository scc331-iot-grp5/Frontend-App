<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/materialcolorpicker__blue"
        android:backgroundTint="@color/materialcolorpicker__blue"
        android:id="@+id/cardLeft"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageLeft"
                android:background="@color/materialcolorpicker__blue"
                android:layout_gravity="left"
                android:textAppearance="@style/TextAppearance.Shrine.heading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/materialcolorpicker__white"
                android:text="Test"
                android:textSize="12sp"
                android:padding="2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/createdAtLeft"
                android:background="@color/materialcolorpicker__blue"
                android:layout_gravity="right"
                android:textAppearance="@style/TextAppearance.Shrine.heading"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:textColor="@color/materialcolorpicker__white"
                android:text="Test"
                android:textSize="8sp"
                android:padding="2dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="5dp"
        android:background="@color/materialcolorpicker__green"
        android:backgroundTint="@color/materialcolorpicker__green"
        android:id="@+id/cardRight"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/messageRight"
            android:background="@color/materialcolorpicker__green"
            android:layout_gravity="left"
            android:textAppearance="@style/TextAppearance.Shrine.heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/materialcolorpicker__white"
            android:text="Test"
            android:textSize="12sp"
            android:padding="2dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/createdAtRight"
            android:background="@color/materialcolorpicker__green"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/TextAppearance.Shrine.heading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/materialcolorpicker__white"
            android:text="Test"
            android:textSize="8sp"
            android:padding="2dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
